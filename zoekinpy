#!/bin/sh
# Zoek een string in all .py files
#
#set -f
files="pyformex/*.py pyformex/gui/*.py pyformex/plugins/*.py pyformex/examples/*.py pyformex/examples/*/*.py"

if [ "$1" = "-a" ]; then
    shift
    for d in local local/* stent; do
	[ -d "$d" ] && files="$files $d/*.py"
    done
fi
#echo "$files"
#set +f
#echo $files
 
grep "$@" $files
