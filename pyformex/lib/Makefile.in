SHELL = /bin/sh

#CSOURCE= $(wildcard *.c)
### !!!! KEEP THE BLANK LINE AFTER THE NEXT ONE !!!
CSOURCE= @C_SOURCE@

### !!!! KEEP THE BLANK LINE ABOVE THIS ONE !!!
OBJECTS= $(CSOURCE:.c=.o)
SOBJECTS= $(CSOURCE:.c=.so)
PROGRAMS= postabq

# To be filled in by ./configure
CC= @CC@
PY_INCLUDE= @PYTHON_INCLUDE@
NUMPY_INCLUDE= @NUMPY_INCLUDE@


INCLUDES= -I/usr/include -I$(PY_INCLUDE) -I$(NUMPY_INCLUDE)

DEBUG=NDEBUG

CFLAGS= -g -D$(DEBUG) -O3 -Wall -Wstrict-prototypes -fPIC

# -DMAJOR_VERSION=1 -DMINOR_VERSION=0


all: $(SOBJECTS) $(PROGRAMS)


debug:
	make DEBUG=DEBUG

postabq: postabq.c
	$(CC) -o $@ $<

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $<

%.so: %.o
	$(CC) -shared $< -L/usr/lib -o $@


Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./configure
#	./config.status --recheck

#configure: configure.ac
#	autoconf
 
clean:
	rm -rf *.o *~ config.log config.status

reset: clean
	rm -rf *.so

distclean: reset
	rm -rf autom4te.cache Makefile configure

# End
